# Database Configuration
DATABASE_URL=postgresql+asyncpg://dss_user:dss_password_123@postgres:5432/ecommerce_dss
MONGODB_URL=mongodb://admin:admin_password@mongodb:27017/
REDIS_URL=redis://redis:6379

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL=300
RATE_LIMIT_ENABLED=true

# Kafka Configuration
KAFKA_SERVERS=kafka:29092

# ML Configuration
MODELS_PATH=/app/models

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=E-commerce DSS API
VERSION=2.0.0

# Development/Production Mode
ENVIRONMENT=development
DEBUG=false

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Features
ENABLE_CORS=true
ENABLE_GZIP=true
ENABLE_SECURITY_HEADERS=true

# Database Pool Settings
MAX_CONNECTIONS_COUNT=10
MIN_CONNECTIONS_COUNT=1

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Management
SESSION_TIMEOUT=3600
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=csv,json,xlsx

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30